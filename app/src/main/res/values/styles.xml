<resources>

    <style name="AppTheme.Dark" parent="AppBaseThemeNoActionBar.Dark" />

    <style name="AppTheme.SplashTheme" parent="AppBaseThemeNoActionBar.Dark" />

    <style name="AppTheme.OnBoarderTheme" parent="AppBaseThemeNoActionBar.Dark" />

    <style name="AppTheme.DashBoard" parent="AppBaseThemeNoActionBar.Dark" />

    <!-- Base application theme. -->
    <style name="AppBaseThemeNoActionBar.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_color_primary</item>
        <item name="colorPrimaryDark">@color/app_color_primary_dark</item>
        <item name="colorAccent">@color/app_color_accent_teal</item>
        <item name="android:windowBackground">@color/app_color_white</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.App.ActionMode</item>
        <item name="actionModeCloseButtonStyle">@style/Widget.App.ActionButton.CloseMode</item>
    </style>

    <!-- Widget styles -->
    <style name="Widget" />

    <style name="Widget.App" parent="Widget" />

    <style name="AppTheme.Dark.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Dark.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
