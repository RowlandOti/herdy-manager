<resources>

    <style name="AppTheme.Dark.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Button" parent="AppTheme.Dark.Button" />

    <style name="Button.Base">
        <item name="android:textSize">17sp</item>>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/app_color_white</item>
        <item name="android:background">@color/app_color_accent_teal</item>
    </style>

    <style name="Button.Base.Weight">
        <item name="android:layout_width">0dp</item>
    </style>


    <style name="Button.Login" parent="Button.Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:text">@string/bt_login</item>
    </style>

    <style name="Button.Register" parent="Button.Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:text">@string/bt_register</item>
    </style>

    <style name="Button.AddAnimal" parent="Button.Base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:text">@string/bt_add_animal</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="Button.AddAnimal.Cancel" parent="Button.Base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:text">@string/bt_add_animal_cancel</item>
        <item name="android:layout_gravity">left</item>
    </style>


</resources>