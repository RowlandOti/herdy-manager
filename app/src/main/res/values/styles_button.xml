<resources>

    <style name="Button" parent="AppTheme.Dark.Button" />

    <style name="Button.Base">
        <item name="android:textSize">17sp</item>>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button.Base.Weight">
        <item name="android:layout_width">0dp</item>
    </style>


    <style name="Button.Login" parent="Button.Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:text">@string/bt_login</item>
        <item name="android:textColor">@color/app_color_white</item>
        <item name="android:background">@color/app_color_accent_teal</item>
    </style>

    <style name="Button.Register" parent="Button.Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:text">@string/bt_register</item>
        <item name="android:textColor">@color/app_color_white</item>
        <item name="android:background">@color/app_color_accent_teal</item>
    </style>

</resources>