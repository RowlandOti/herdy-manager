<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/app_color_primary_dark</item>
        <item name="colorControlActivated">@color/app_color_primary</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="EditText.Base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditText.BaseWidth">
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="EditText.Username" parent="EditText.BaseWidth">
        <item name="android:hint">@string/username</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:freezesText">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:drawableLeft">@drawable/ic_action_user</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="EditText.Password" parent="EditText.BaseWidth">
        <item name="android:ems">10</item>
        <item name="android:hint">@string/password_hint</item>
        <item name="android:imeActionLabel">@string/login</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:freezesText">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:drawableLeft">@drawable/ic_action_secure</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="EditText.Email" parent="EditText.BaseWidth">
        <item name="android:hint">@string/email_hint</item>
        <item name="android:imeActionLabel">@string/login</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:freezesText">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:drawableLeft">@drawable/ic_action_email</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="EditText.Base.Weight" parent="EditText.Base">
        <item name="android:layout_width">0dp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="EditText.Connection" parent="EditText.Base.Weight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:inputType">text</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="EditText.Tenant" parent="EditText.Connection">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="EditText.AddAnimal" parent="EditText.BaseWidth">
        <item name="android:hint">@string/add_animal_name_hint</item>
        <item name="android:imeActionLabel">@string/login</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:freezesText">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="EditText.AddAnimal.Name" parent="EditText.AddAnimal">
        <item name="android:hint">@string/add_animal_name_hint</item>
    </style>

    <style name="EditText.AddAnimal.HatchNo" parent="EditText.AddAnimal">
        <item name="android:hint">@string/add_animal_hatchno_hint</item>
    </style>

    <style name="EditText.AddAnimal.DoB" parent="EditText.AddAnimal">
        <item name="android:hint">@string/add_animal_dob_hint</item>
    </style>

    <style name="EditText.AddAnimal.Sex" parent="EditText.AddAnimal">
        <item name="android:hint">@string/add_animal_sex_hint</item>
    </style>

    <style name="EditText.AddAnimal.Breed" parent="EditText.AddAnimal">
        <item name="android:hint">@string/add_animal_breed_hint</item>
    </style>
</resources>