<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_text_view_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageview_empty_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_error_empty_list" />
    <!-- Empty TextView-->
    <TextView
        android:id="@+id/empty_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/empty_text_view_padding"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:padding="@dimen/empty_text_view_padding"
        android:text="@string/empty_list"
        android:textColor="@color/app_color_accent_teal"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_empty_try_again"
        android:layout_width="268dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="@string/empty_try_again"
        android:textAllCaps="true"
        android:textColor="@color/app_color_accent_teal"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>