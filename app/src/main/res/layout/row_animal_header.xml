<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/app_color_accent_teal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_header_one"
            style="@style/TextView.Title.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="NAME" />

        <TextView
            android:id="@+id/tv_header_two"
            style="@style/TextView.Title.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="HUTCH" />

        <TextView
        android:id="@+id/tv_header_three"
        style="@style/TextView.Title.Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="SEX" />

        <TextView
            android:id="@+id/tv_header_four"
            style="@style/TextView.Title.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="BORN" />

        <TextView
            android:id="@+id/tv_header_five"
            style="@style/TextView.Title.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="BREED" />

        <TextView
            android:id="@+id/tv_header_six"
            style="@style/TextView.Title.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="STATUS" />

    </LinearLayout>

    <include
        layout="@layout/inc_horizontal_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="6dp" />

</LinearLayout>